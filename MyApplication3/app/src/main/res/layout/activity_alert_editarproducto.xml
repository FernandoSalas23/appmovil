<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtNameEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:maxLines="1"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/edtPriceEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio"
            android:maxLines="1"
            android:inputType="numberDecimal"
            />
        <EditText
            android:id="@+id/edtQuantityEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad"
            android:maxLines="1"
            android:inputType="number"
            />
        <EditText
            android:id="@+id/edtCategoryEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Categoria"
            android:maxLines="1"
            android:inputType="number"
            />








        <Button
            android:id="@+id/adtbtnCamara"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Tomar Foto"
            android:drawableRight="@drawable/baseline_add_a_photo_24"
            android:textColor="#FFFFFF"
            app:backgroundTint="#349892"/>

        <ImageView
            android:id="@+id/edtimageView"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_margin="30dp"
            android:background="@drawable/imagenfond"
            />

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Guardar cambios"
            android:textColor="#FFFFFF"
            app:backgroundTint="#349892"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>