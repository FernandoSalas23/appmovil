<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo translúcido con efecto glass -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40FFFFFF"/> <!-- Color translúcido para el efecto glass -->
            <corners android:radius="20dp"/> <!-- Ajustar al mismo radio del CardView -->
        </shape>
    </item>

    <!-- Borde blanco -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@android:color/white"/> <!-- Borde blanco -->
            <corners android:radius="20dp"/> <!-- Ajustar al mismo radio del CardView -->
        </shape>
    </item>
</layer-list>
